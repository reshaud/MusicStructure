<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/any_size</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingTop">@dimen/paddingTextView</item>
        <item name="android:paddingBottom">@dimen/paddingTextView</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AlbumStyle">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_width">@dimen/any_size</item>
        <item name="android:layout_height">@dimen/album_height</item>
        <item name="android:layout_marginRight">@dimen/general_margin</item>
        <item name="android:layout_marginEnd">@dimen/general_margin</item>
        <item name="android:layout_marginLeft">@dimen/general_margin</item>
        <item name="android:layout_marginStart">@dimen/general_margin</item>
        <item name="android:layout_marginTop">@dimen/general_margin</item>
    </style>

</resources>
